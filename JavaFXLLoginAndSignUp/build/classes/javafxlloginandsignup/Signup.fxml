               <image>
                  <Image url="@images/icons8_Email_96px.png" />
               </image>
            </ImageView>
            <TextField prefHeight="39.0" fx:id="txt_email" prefWidth="364.0" promptText="Email" />
         </children>
         <VBox.margin>
            <Insets left="15.0" right="15.0" top="20.0" />
         </VBox.margin>
      </HBox>
      <HBox prefHeight="40.0" prefWidth="200.0" styleClass="tf-box">
