            <ImageView fitHeight="40.0" fitWidth="38.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@images/icons8_Key_2_96px.png" />
               </image>
            </ImageView>
            <PasswordField prefHeight="39.0" fx:id="txt_password" prefWidth="356.0" promptText="Password" />
         </children>
         <VBox.margin>
            <Insets left="15.0" right="15.0" top="20.0" />
         </VBox.margin>
      </HBox>
      <HBox alignment="CENTER_RIGHT" layoutX="25.0" layoutY="272.0" prefHeight="47.0" prefWidth="392.0">
         <VBox.margin>
            <Insets left="15.0" right="15.0" top="20.0" />
         </VBox.margin>
         <children>
            <JFXButton fx:id="btn_signup" onAction="#signUp" prefHeight="47.0" prefWidth="85.0" styleClass="pink-btn" text="Sign In">
               <font>
                  <Font size="13.0" />
               </font>
            </JFXButton>
         </children>
